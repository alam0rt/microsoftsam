# Mumble Voice Bot Configuration
# Copy to .env and customize

# =============================================================================
# Mumble Server Settings
# =============================================================================
MUMBLE_HOST=localhost
MUMBLE_PORT=64738
MUMBLE_USER=VoiceBot
MUMBLE_PASSWORD=
MUMBLE_CHANNEL=

# =============================================================================
# Wyoming STT (Speech-to-Text) Settings
# Use wyoming-faster-whisper server instead of local Whisper
# =============================================================================
WYOMING_STT_HOST=localhost
WYOMING_STT_PORT=10300

# =============================================================================
# Wyoming TTS (Text-to-Speech) Settings  
# Our LuxTTS server wrapped in Wyoming protocol
# =============================================================================
WYOMING_TTS_HOST=localhost
WYOMING_TTS_PORT=10400
WYOMING_TTS_REFERENCE=reference.wav

# =============================================================================
# LLM Settings
# =============================================================================
# Endpoint for OpenAI-compatible API (Ollama, vLLM, OpenAI, etc.)
LLM_ENDPOINT=http://localhost:11434/v1/chat/completions

# Model name
LLM_MODEL=llama3.2:3b

# API key (optional for local servers, required for OpenAI/OpenRouter)
LLM_API_KEY=

# =============================================================================
# Voice Settings
# =============================================================================
# Reference audio file for voice cloning
REFERENCE_AUDIO=reference.wav

# Compute device (auto, cpu, cuda, mps)
DEVICE=auto

# TTS quality steps (4-8, higher = better quality but slower)
TTS_STEPS=4

# =============================================================================
# VAD (Voice Activity Detection) Settings
# =============================================================================
# RMS threshold for detecting speech (use --debug-rms to tune)
ASR_THRESHOLD=2000
